class Drink:
    def make(self):
        return 'made a drink'

class Cola(Drink):
    def make(self):
        return 'made a cola'

class Sprite(Drink):
    def make(self):
        return 'made a sprite'

class Fanta(Drink):
    def make(self):
        return 'made a fanta'

class Lipton(Drink):
    def make(self):
        return 'made a lipton'
class Spezi(Drink):
    def make(self):
        return 'made a spezi' 

der factory_methode(drink_type):
    if drink_type == 'cola':
        return Cola()
    elif drink_type == 'fanta':
        return Fanta()
    elif drink_type == 'sprite':
        return Sprite()
    elif drink_type == 'lipton':
        return Lipton()
    elif drink_type == 'spezi':
        return Spezi()
    else:
        return Drink()

drink = factory_methods('cola')
print(drink.make)
